<%- include('../partials/header') %>

<div class="reviews">
    <div class="image">
        <img src="https://image.tmdb.org/t/p/w342<%= movie.image %>" class="">
    </div>

    <div class="review_info">
        <% movie.reviews.forEach(r => { %>
        <div class="review_rating">  
            <table>
                <th class="review_rating_label">Rate</th>
                <th class="review_rating_label">Date</th>
                <br>
                <tbody id="review_td">
                    <td><%= r. rating %></td>
                    <td><%= r. date %></td>
            </tbody>
            </table>
            <p class="content"><%= r. content %></p>
            <form action="/movies/<%= movie._id %>/review/<%= r._id %>?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="trailer_remove" id="remove"></input>
            </form>
        </div>
        <% }) %>
        <br>
        <form id="add-review-form" method="POST"
            action="/movies/<%= movie._id %>/review">
            <label class="review_rating_label">Review :</label>
            <br>
            <textarea name="content" rows="6" cols="70"></textarea>
            <br>
            <label class="review_rating_label">Rating :</label>
            <select name="rating">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <input type="submit" value="Save" id="saveReviewButton"></input>
        </form>
    </div>
</div>

